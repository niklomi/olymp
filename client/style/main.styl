@import 'stylus.import'

html
	height: 101%

body
	font-family: "Proxima Nova","Helvetica Neue", Helvetica, Arial, sans-serif
	color:$text-main-color
	text-rendering: optimizeLegibility;
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
	-moz-font-feature-settings: "liga" on;

html, body
	color:$text-main-color

h1,h2,h3,h4,h5,h6,p
	padding:0
	margin:0

#follow_twitter
	position: fixed
	bottom:0px
	right:7px
	z-index:899

a
	outline: none
	color: $color-link
	&:hover, &:focus, &:active
		outline: none
		color: $text-main-color
	&:hover, &:focus
		text-decoration:none
		border-bottom: 2px solid
	border-bottom: 2px solid transparent;

.capsula
	border-radius:4px;
	font-size: 10px;
	text-transform: uppercase;
	display:inline-block
	padding: 6px 8px;
	font-weight: 600;
	border:2px solid
	-webkit-transition: all .05s ease-in-out;
	-o-transition: all .05s ease-in-out;
	transition: all .05s ease-in-out;

.grade
	border-radius:50%
	color: $text-grey-color
	display: inline-block
	text-align: center;
	height: 3rem;
	width: 3rem;
	font-size:16px
	line-height: 2.9rem;

.grade_aa
	background: $color-aa
	color:#FFF
	border-color:transparent

.grade_bb
	background: $color-bb
	color:#FFF
	border-color:transparent

.grade_cc
	background: $color-cc
	color:#FFF
	border-color:transparent

.grade_dd
	background: $color-dd
	color:#FFF
	border-color:transparent

.grade_ff
	background: $color-ff
	color:#FFF
	border-color:transparent

.link
	color: $color-link
	cursor:pointer
	&:hover, &:focus, &:active
		border-bottom: 2px solid
		color:$text-main-color
	border-bottom: 2px solid transparent;

.no-border
	border: none !important

b, strong
	font-weight: 600

.container-x
	max-width: 1000px
	margin: 0px auto
	position: relative

.relative
	position: relative

.tiny
	font-weight:200 !important

.text-grey
	color: $text-grey-color

.bold
	font-weight:600 !important

.normal
	font-weight: 400 !important

.inline-block
	display:inline-block

.pointer
	cursor: pointer

.no-select
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;

input
	display: block;
	width: 100%;
	height: 4rem;
	padding: 6px 12px;
	font-size: 16px;
	line-height: 1.42857143;
	color: $text-main-color
	outline: none;
	background-color: #fff;
	background-image: none;
	border: 1px solid $text-grey-color;
	border-radius: 4px;

textarea
	display: block;
	width: 100%;
	padding: 6px 12px;
	font-size: 16px;
	line-height: 1.42857143;
	color: $text-main-color;
	outline: none;
	background-color: #fff;
	background-image: none;
	border: 1px solid  $text-grey-color;
	border-radius: 4px;

label
	font-weight: 400 !important
	font-size: 18px;

th
	font-weight: 600

.align-left
	text-align: left !important

.align-right
	text-align: right !important

.hide-900
	@media(max-width:900px)
		display: none

.hide-630
	@media(max-width:630px)
		display: none

.hide-540
	@media(max-width:540px)
		display: none

.hide-460
	@media(max-width:460px)
		display: none

.hide-390
	@media(max-width:390px)
		display: none

.width-100-sm
	@media(max-width:768px)
		width:100%
