@import '{}/client/style/stylus.import';


.fixedFooter
  position: fixed;
  width: 100%
  height: 5rem
  bottom: 0
  left: 0
  background-color: $text-light-grey-color
  padding: 0 1rem
  .link-section
    display: inline-block;
    line-height: 5rem
  .link-section *
    color: $text-main-color
  .createdBy
    margin: 1rem 0 0
    p
      display: inline-block
      vertical-align: middle;
      font-weight: 600
      color: $text-main-color
      &:first-child
        margin-right: 0.5rem
      &:last-child
        margin-left: 0.5rem
    .image
      border-radius: 50%;
      vertical-align: middle;
      width: 3rem
      height: 3rem
