@import '{}/client/style/stylus.import';

.rating-table
    width:100%
    margin-top: 1rem;
    .rating-table-header
        .active-th
            background-color: $color-light-grey
            color: $main-color
    .tr-company
        td, th
            &:first-child
                padding-left:0.5rem
            &:last-child
                padding-right:0.5rem
    tr
        td, th
            text-align: center;
            font-size: 16px
        th
            font-weight: 600
            font-size: 16px
            padding: 1rem 0.5rem 0
            vertical-align: top;
            cursor:pointer
            &:hover
                color: $main-color
    .full-info
        td
            text-align:left
    .th-company
        min-width:18rem
        padding-left: 1rem;
        @media(max-width: 740px)
            min-width: 0;

#footer
    margin:2rem 0.5rem
    .new-company-wrap
        margin: 2rem 0 4rem
