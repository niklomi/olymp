@import '{}/client/style/stylus.import';

.full-info
    .no-item
        margin: 5rem 0 10rem
        color: $text-grey-color
        font-size: 24px
        text-align: center
    .menu
        p
            display: inline-block;
            cursor: pointer
            font-size: 20px
            font-weight: 600
            margin-right: 1rem
            &:last-child
                margin-right: 0
            &:hover
                border-bottom: 2px solid $text-main-color
        .active
            border-bottom: 2px solid $text-main-color
    .intro
        margin: 2rem 0
        h1
            display: inline-block;
            font-size: 28px
            margin-right: 1rem
            a
                color: $text-main-color
                font-weight:bold
        p
            display: inline-block;
            font-size: 24px
            color: $text-grey-color
            font-size: 20px;
            text-transform: uppercase;

    .tweet-it
        width:100%
        background-color:#55ACEE
        color:#fff
        text-align:center
        padding:2rem 1rem
        border-radius:4px
        margin-top: 1rem
        p
            display: inline-block
            padding: 0 1rem 1rem 0;
            font-size:18px

    .review
        margin: 5rem 0
        .h4
            margin: 2rem 0 1rem
        .review-text
            h4
                font-weight: 600
            .text
                white-space: pre-line;
