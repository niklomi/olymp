@import '{}/client/style/stylus.import';
.give-me-invite-slack
	.slack-info
		font-size: 18px
		margin-bottom: 1rem
		p
			display:inline-block
			margin: 0
	.message
		font-size: 18px
		color: $text-main-color
	form
		display: inline-block
		input
			display: inline-block;
			width: auto;
			font-weight: 600;
			border: 2px solid $text-main-color
			@media(max-width:768px)
				width:100%
		input::-webkit-input-placeholder {color:$text-main-color; font-weight: 600;}
		input::-moz-placeholder          {color:$text-main-color; font-weight: 600;}
		input:-moz-placeholder           {color:$text-main-color; font-weight: 600;}
		input:-ms-input-placeholder      {color:$text-main-color; font-weight: 600;}
		button
			margin-left: 1rem
			@media(max-width:768px)
				margin:1rem 0 0
				width:100%

.slack-about
	margin-bottom: 3rem !important
	.ul-to-p
		li
			p
				display: inline-block
			line-height: 1.8;
			font-size: 18px;
	.slack-chat
		background: transparent url("/images/slack-chat.png") no-repeat scroll 0% 0%;
		height: 35rem
		width: 100%
		background-size: cover

.slack-img-wrap
	background: $text-main-color
	position: relative
	overflow: hidden
	background: rgba(0,0,0,0.5)
	text-align: center;
	&:before
		content: '';
		position: absolute;
		background: transparent url("/images/slack_back.jpg") no-repeat scroll 0% 100%;
		background-size:cover
		top: 0;
		left: 0;
		bottom: 0;
		right: 0;
		z-index: -1
		width: 100%
	.text-wrap
		text-align: center;
		.text
			color:#FFF
			display: inline-block;
			overflow: hidden;
			padding: 3rem 1rem 3rem
			.slack-wrap
				display: inline-block;
				padding: 2rem;
				border-radius: 4px;
				background: #f4f4f4;
				margin: 4rem 0 6rem;
				h2
					font-size:28px
					font-weight: 600
					margin: 0 0 1rem
					color: $text-main-color
					display: inline-block;
					@media(max-width:768px)
						font-size:20px
			h1
				font-size: 42px
				font-weight: 600
				text-transform uppercase
				@media(max-width:768px)
					font-size:32px
				@media(max-width:500px)
					font-size:28px
				span
					font-weight:200
					font-size: 36px
			.logo
				background-image: url('/images/logo.png');
				display:inline-block
				width:8rem
				height:8rem
				background-size:cover
				margin: 0 0 1rem;
				@media(max-width:768px)
					width:7rem
					height:7rem
